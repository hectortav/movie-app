{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["lint", "^build"],
            "outputs": ["dist/**", ".next/**"]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false
        },
        "test": {
            "outputs": ["coverage/**"],
            "outputMode": "full"
        }
    },
    "globalEnv": ["NODE_ENV"]
}
