{
    "name": "workable-assignment",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "generate": "export $(grep -v '^#' .env | xargs) && turbo run generate",
        "migrate": "turbo run migrate",
        "dev:exec": "yarn generate && turbo run dev --parallel",
        "lint": "turbo run lint --ignore=\"eslint-config-custom\" --ignore=\"tsconfig\"",
        "test": "turbo run test --ignore=\"eslint-config-custom\" --ignore=\"tsconfig\"",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky install",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "dev": "yarn docker:up && (yarn migrate && yarn dev:exec); ret_code=$?; yarn docker:down; exit $ret_code"
    },
    "devDependencies": {
        "eslint-config-custom": "*",
        "husky": "^8.0.0",
        "prettier": "latest",
        "prettier-plugin-prisma": "^4.4.0",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "pretty-quick": "^3.1.3",
        "turbo": "latest"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {},
    "packageManager": "yarn@1.22.19"
}
